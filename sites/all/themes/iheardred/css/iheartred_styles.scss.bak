/* Umfragen stylen */

/* Radiobuttons und Boxplots zusammen stylen */

fieldset {
  margin: 0 0 2rem 0;
  padding: 1rem;
  position: relative;
  top: 0;
  border-radius: 0;
  border: 0;
  width: 100%;
  max-width: 600px;

    &:nth-child(n) {
      background-color: #e2e7ed;
    }
}


/* Radio-Buttons besser zugänglich stylen */

.form-item {
  width: 100%;
  margin: auto auto 1rem auto;
}

.form-item-quantity {
  width: auto;
}

.form-submit[value="Ändern"] {
  /*
  margin-top: calc(2rem + 1rem + 5px);
  */
  margin-top: 21px;
  margin-bottom: 2rem;
  clear: none !important;
}

.form-submit {
  float: left;
  clear: none;
}

.form-submit:first-of-type {
  clear: left;
}


$dimensions: 24;

%radio_btn_x_dims {
  width: auto;
  float: left;
  /* Reduziert auf 15%, damit 7 Spalten Skala in eine Reihe passt */
  margin-left: calc(15.0% - 15.6px);
}

@mixin radio_btn_x_dims {
  @for $i from 0 through $dimensions {
    .form-item-dim#{$i} {
      margin-top: 1rem; /* Angepasst, um ausschweifende Freiflächen zu reduzieren */

      &.form-type-radio {
        @extend %radio_btn_x_dims;
        position: relative;

        & label.option {
          display: block;
          position: absolute;
          float: none;
          left: 0.9em;
          width: 5rem;
          font-size: 1em;
          line-height: 1.1;
          transform: rotate(29deg);
          transform-origin: 15px 6px;
        }
      }
    }
  }
}

.evaluation-content-wrapper label.option {
  transform-origin: 24px 2px !important;
}

@include radio_btn_x_dims;

/* Radio-Buttons als Achsenbeschriftung auf Boxplot skalieren */
.radios-5 > .form-type-radio {
  margin-left: calc(20.9%);
}

.radios-6 > .form-type-radio {
  margin-left: calc(15.1%);
}

.radios-7 > .form-type-radio {
  margin-left: calc(11.65%);
}

/* Es wird ein label Element benötigt, welches nach dem input auftritt, damit dieses als :checked verwendet werden kann, um die Buttons umzustylen

.form-type-radio:before {
  content:'';
  display: block;
  visibility: visible;
  float: left;
  position: absolute;
  z-index: 998;
  width: 30px;
  height: 30px;
  border-radius: 30px;
  border: 1px solid $color-bright;
  background-color: #transparent;
  margin: -1px 0 0 -1px;
}

input.form-radio:checked .form-radio:after {
  content:'';
  display: block;
  float: left;
  position: absolute;
  z-index: 999;
  width: 20px;
  height: 20px;
  border-radius: 20px;
  background-color: $color-bright;
  margin: -1px 0 0 -1px;
}

*/

.form-radios {
  width: 100%;
}

.form-radios .form-type-radio:first-of-type {
  margin-left: 0 !important;
}


.svg-container {
  float: left;
}

/* spezifischer stylen, damit keine riesigen Lücken entstehen! */

.form-type-radios {
  width: 100%;
  max-width: 600px;
  padding: 0;
  margin-bottom: 4rem;
}

#survey-form .form-type-textfield {
  max-width: 600px;
  margin-bottom: 0;
}

.form-wrapper .form-type-radios {
  margin-bottom: 0.4rem;
}

.form-item {
  float:left;
}

/* Textfelder */

.form-textarea-wrapper {
  width: 100%;
  max-width: 600px;
  margin: 0 0px 0px;
  padding: 0;
  float: left;
  & .form-textarea {
    width: 100%;
  }
}

/* Style Textaerea wie Textfelder */
textarea {
  -moz-appearance: textfield;
  -webkit-appearance: textfield;
  padding: 1px;
  font: -moz-field;
  line-height: normal;
}

/* Format survey configuration form */
#survey-configure-form {
  & * {
    max-width: 100% !important;
  }

  & .fieldset-wrapper {
    margin-top: 0px;
  }

  & .text-format-wrapper, .form-textarea-wrapper {
    margin-bottom: 2em;
  }

  & .filter-wrapper {
    display: none;
  }
}

/* Zusätzlicher Abstand nur nach den Radio-Buttons der Evaluationsseite, damit Platz für die Beschriftung ist.
   Radio-Buttons auf Boxplot-Skala ausrichten. */
#survey-question-evaluation-form .form-type-radios {
  margin-top: 0;
  margin-bottom: 4rem;
  margin-left: -5px;
}

/* Abstand bei fünf Radio-Buttons anpassen, damit Beschriftung noch in Fieldset passt. */
#survey-question-evaluation-form .radios-5 .form-type-radio:last-of-type {
  right: 2em;
}

