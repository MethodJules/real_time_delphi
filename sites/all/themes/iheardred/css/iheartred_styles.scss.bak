/* BOXPLOTS SIND STYLISCH WIE KINYE WEST, JUNGE! */


.container {
  width: 100%;
  max-width: 600px;
  margin: calc(2rem + 1rem) 0 2% 0;
  padding: 0;
  float: left;
}


.boxplot {
  width: 70%;
  height: 40px;
  max-width: 600px;
  position: relative;
  float:left;
}

.box {
  width: 100%;
  height: calc(40px + 2rem);
  position: absolute;
}

.linie {
  height: 20px;
  border-bottom: 1px solid $color-middle;
}

.whisker {
  width: 100%;
  height: 15px;
  margin-top: 12.5px;
  border-left: 1px solid $color-middle;
  border-right: 1px solid $color-middle;
}

.thirdquant {
  background-color: $color-bright;
  background: repeating-linear-gradient(45deg, $color-middle, $color-middle 1px, transparent 1px, transparent 10px),
              linear-gradient(to bottom, $color-bright, $color-bright);
  width: 35%;
  height: 40px;
  border: 1px solid $color-middle;
  border-right: 3px solid $color-third-quantil;
}


.median,
.mittel,
.interquart {
  width: 1px;
  border-right: 3px solid $color-average;
  bottom: 0;
  z-index: 99;
}

.interquart {
    border-right: 3px solid $color-first-quantil;
    height: 40px;
}

.mittel {
  top: 0;
}

.median {
  border-left: 0px solid transparent;
  border-right: 3px solid $color-median;
}

.schild {
  display: inline-block;
  position: absolute;
  margin-top: -1rem;
  padding: 0 .5rem 0;
  font-weight: bold;
  color: #fff;
  background-color: $color-middle;
  border-radius: 300px;
  text-align: center;
  z-index: 100;
}

.schild.s_median,
.schild.s_average {
  margin-top: -3rem;
  background-color: $color-average;
}

.schild.s_average {
  margin-top: 4rem;
}

.schild.s_median {
  background-color: $color-median;
}

.schild.s_first_quantil {
  background-color: $color-first-quantil;
  margin-top: 2rem;
}

.schild.s_third_quantil {
  background-color: $color-third-quantil;
}

/* Legende fuer Boxplots */

.legend {
  float: right;
  display: block;
  width: 20%;
  /* Legende vertikal an Boxplot ausrichten */
  margin-top: -2.3rem;
  margin-bottom: 1rem;
  line-height: 1;
  font-weight: bold;

  & .item-list ul li {
    background: none, $color-bright;
    list-style-type: none;
    padding: 5px;
    margin: 5px;
    }

  & .item-list ul li:nth-child(1) {
    background: none, $color-first-quantil;
    color: $color-bright;
    }

  & .item-list ul li:nth-child(2) {
    background: none, $color-average;
    color: $color-bright;
    }

  & .item-list ul li:nth-child(3) {
    background: none, $color-median;
    color: $color-bright;
    }

  & .item-list ul li:nth-child(4) {
    background: none, $color-third-quantil;
    color: $color-bright;
    }

  }

/* [Fix] Antwortmöglichkeiten Blöcke immer in neuer Zeile */
#delphi-question-change-question-form fieldset {
  clear: both;
}

/* Breite des Textfeld für Titel der Frage an Seitenbreite anpassen */
#question-field, .item-title {
  width: 100%;
}

/* Titel der Antwortmöglichkeiten beim Ausfüllen einer Umfrage hervorheben */
.answers > div > label {
  font-weight: bold;
}

/* Fix damit Boxplots nichts mehr über Fieldset-Box hinausragen */
#survey-question-evaluation-form .fieldset-wrapper {
  margin-top: 55px;
}

#survey-question-evaluation-form .title-long .fieldset-wrapper {
  margin-top: 80px;
}

.boxplot-nodata {
  margin-top: -40px;
  margin-bottom: 10px;
}

/* Abstand Antwortmöglichkeit Textfeld beim Beantworten der Umfrage */
.answers > .form-type-textfield {
  margin-top: 1rem;
}

/* Radio-Buttons auf einer Höhe mit Labels */
.answers .form-type-radio label {
  margin-top: -4px;
}
input.form-radio {
  vertical-align: sub;
}

/* Radio-Buttons zur konfiguration der Fragen nebeneinander */
#delphi-question-change-question-form .form-type-radio,
#question-form .form-type-radio{
  width: auto;
  margin-right: 2rem;
}

/* Boxplot Fieldset Formatierung */
#survey-question-evaluation-form fieldset legend {
  // Fieldset Titel bündig mit Box
  left: 0;
  // mehrzeiliger Fieldset Titel
  height: auto;
  text-indent: 0;
  padding-left: 10px;

  & .fieldset-legend {
    font-weight: bold;
  }
}

/* Rahmen als zur Strukturierung auf Umfrageseite */
.answers > .form-type-textfield,
.answers > .form-type-radios {
  border-style: solid;
  border-width: 2px;
  padding: 0.5rem 1rem;
  margin-top: 0.5rem;
}

.answers > .form-type-radios {
  padding-bottom: 4rem;
  margin-bottom: 0;
}

/* Ein-/ausblendbare Kommentare als Buttons gestyled */
.toggleComments {

  & .form-type-checkbox {
    margin-top: -1rem;
    margin-bottom: 0;
  }
  
  & * {
    float: right;
  }

  & input {
    display: none;
  }

  & input[type=checkbox] + label {
    color: #777;
    background-color: #F2F2F2;
    cursor: pointer;
    padding: 4px 1em 4px 1em;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
  }

  & input[type=checkbox]:checked + label {
    background-color: #DBDBDB;
  }
}

#delphi-question-change-question-form *,
#question-form * {
  max-width: 800px;
}

#delphi-question-change-question-form .answer-sets,
#question-form .answer-sets {
  max-width: 740px;
}

.select-table .form-type-select {
  margin: auto;
}

/* Hide elements on question group form */
.question-group-form {
  & .form-item-quantity,
  #edit-back,
  .form-type-radios {
    display: none !important;
  }
}

/* Highlight question group rows on question overview*/
.question-group-row td {
  background-color: lightyellow;
}

.question-row td:first-child {
  padding-left: 20px;
}

#edit-new-questiongroup {
  margin-right: 2em;
}

/**
 * Style the survey progress bar.
 */
.progress-bar {
  background-color: #f4f4f4;
  border-radius: 4px;
  height: 20px;
  width: 100%;
  float: left;
  margin-top: 1em;
}

.progress {
  background-color: lightblue;
  text-align: center;
  border-radius: inherit;
  min-width: 2em;
}

/* Hide text on disabled textfields */
.question-content-wrapper input[type="text"]:disabled,
.evaluation-content-wrapper input[type="text"]:disabled {
  color: transparent;
}

/* Style end survey form */
.form-item-feedback {
  margin-top: 2em;
  margin-bottom: 0;

}

/* Always position the back button to the left */
.buttons-submit,
#survey-question-evaluation-form {
  float: left;
  clear: both;

  #edit-back {
    float: left;
  }

  #edit-submit {
    float: none;
  }
}
